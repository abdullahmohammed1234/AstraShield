# AstraShield Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=5000
NODE_ENV=development

# MongoDB (use your connection string)
# Local: mongodb://localhost:27017/astrashield
# Atlas: mongodb+srv://<username>:<password>@cluster0.xxx.mongodb.net/astrashield
MONGODB_URI=mongodb://localhost:27017/astrashield

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_OUTPUT=file
LOG_DIR=./logs

# Service Name (for logging)
SERVICE_NAME=astrashield-api
